<head>
    <% include ../template/head.ejs %>
    <script>
        var user = <% -JSON.stringify(user == null ? "": user) %>;
        var project_id = Number(<% - JSON.stringify(project_id) %>);
        var applying =<% - JSON.stringify(applying??"") %>;
        var fromApply =<% - JSON.stringify(fromApply??"") %>;
        <% if (!fromApply) { %>
        $(function () {
            $(".slider").each(function () {
                $(this).hide();
            });
            
            $("#pl-java").click(function () {
                $("#javaRange").toggle(this.checked);
            });
            $("#pl-javascript").click(function () {
                $("#jsRange").toggle(this.checked);
            });
            $("#pl-c").click(function () {
                $("#cRange").toggle(this.checked);
            });
            $("#pl-cpp").click(function () {
                $("#cppRange").toggle(this.checked);
            });
            $("#pl-csharp").click(function () {
                $("#cshRange").toggle(this.checked);
            });
            $("#pl-objectivec").click(function () {
                $("#objcRange").toggle(this.checked);
            });
            $("#pl-swift").click(function () {
                $("#swRange").toggle(this.checked);
            });
            $("#pl-python").click(function () {
                $("#pyRange").toggle(this.checked);
            });
            $("#pl-matlab").click(function () {
                $("#matRange").toggle(this.checked);
            });
            $("#pl-assembly").click(function () {
                $("#assRange").toggle(this.checked);
            });
            $("#pl-lisp").click(function () {
                $("#lispRange").toggle(this.checked);
            });

            $("#dev-frontend").click(function () {
                $("#fnRange").toggle(this.checked);
            });
            $("#dev-backend").click(function () {
                $("#bnRange").toggle(this.checked);
            });
            $("#dev-ios").click(function () {
                $("#iosRange").toggle(this.checked);
            });
            $("#dev-android").click(function () {
                $("#andrRange").toggle(this.checked);
            });
            $("#dev-windows").click(function () {
                $("#windowsRange").toggle(this.checked);
            });
            $("#dev-mac").click(function () {
                $("#macRange").toggle(this.checked);
            });
            $("#dev-linux").click(function () {
                $("#linuxRange").toggle(this.checked);
            });
            $("#dev-algorithm").click(function () {
                $("#algoRange").toggle(this.checked);
            });
            $("#dev-network").click(function () {
                $("#netRange").toggle(this.checked);
            });
            $("#dev-ml").click(function () {
                $("#mlRange").toggle(this.checked);
            });
            $("#dev-ds").click(function () {
                $("#dsRange").toggle(this.checked);
            });
            $("#dev-communication").click(function () {
                $("#commRange").toggle(this.checked);
            });
            var error = "none";
            $("#submit-button").click(function () {
                $("#submit-button").attr('disabled', true);
                var profile = {
                    nickname: "",
                    year: -1,
                    intended_teamleader: false,
                    pl: {},
                    dev: {},
                    reason: "",
                    project_id,
                    contribution: "",
                    time_for_project: 0,
                    interests: "",
                    active_participation: "",
                    description: ""
            };
            profile.nickname = $("#nickname").val();
            profile.year = $("#year").val();
            profile.description = $("#intro").val();

            var error = null;
            if (applying) {
                profile.intended_teamleader = $("#teamleader").prop('checked');
                profile.reason = $("#reason").val();
                profile.time_for_project = $("#time_for_project").val();
                profile.interests = $("#interests").val();
                profile.contribution = $("#contribution").val();
                profile.active_participation = $("#active_participation").val();
                if (!$.isNumeric(profile.time_for_project))
                    error = "Please fill in the number of hours you will be able to commit for the project!";
                else if (!$.trim(profile.reason).length > 0)
                    error = "Please fill in the reason you want to join this project";
                else if (!$.trim(profile.interests).length > 0)
                    error = "Please fill in your interests to help us know you better";
                else if (!$.trim(profile.active_participation).length > 0)
                    error = "Please fill in how you plan on being an active member of the project";
                else
                    error = "none";
            }
            if (!error) {
                if ($(".pl-checkbox:checked").length > 0) {
                    $(".pl-group").each(function (index, elem) {
                        var name = elem.children[0];
                        var exp = elem.children[1].val;
                        if (name.checked == true) {
                            profile.pl[name] = exp;
                        }
                    }).promise().done(function () {
                        $(".dev-group"), each(function (index, elem) {
                            var group = elem.children[0];
                            var groupex = elem.children[1].val;
                            if (group.checked == true) {
                                profile.dev[group] = groupex;
                            }
                        }).promise().done(function () {
                            if ($("#resume")[0].files.length > 0) {
                                var file = $("#resume")[0].files[0];
                                var reader = new FileReader();
                                reader.readAsDataURL(file);
                                reader.onload = function () {
                                    profile.resume = reader.result;
                                    $.ajax({
                                        url: "/upload_profile",
                                        method: "POST",
                                        dataType: "json",
                                        data: profile,
                                        success: function () {
                                            window.location.href = "/profile?status=s";
                                        },
                                        error: function (jqXHR, textStatus, errorThrown) {
                                            console.log(errorThrown)
                                            $(".error-msg").html(jqXHR.responseJSON);
                                            $("#submit-button").attr('disabled', false);
                                        }
                                    });
                                };
                                reader.onerror = function (error) {
                                    console.log(error);
                                };
                            }
                            else {
                                $.ajax({
                                    url: applying ? "/project/applyProject" : "/upload_profile",
                                    method: "POST",
                                    dataType: "json",
                                    data: profile,
                                    success: function () {
                                        window.location.href = !applying ? "/profile?status=s" : `../project/detail?id=${project_id}`;
                                    },
                                    error: function (jqXHR, textStatus, errorThrown) {
                                        $(".error-msg").html(jqXHR.responseJSON);
                                        $("#submit-button").attr('disabled', false);
                                    }
                                });
                            }
                        });
                    });
                }
                else {
                    $(".error-msg").html(error);
                    $("#submit-button").attr('disabled', false);
                }
            });
            <% } %>

            var url;
            $("#confirmation").click(function () {
                url = "/project/approveApplicant";
                $("#box-info-text").text("approve");
                $("#box-info-title").text("Approve");
                $("#confirmation-box").modal('show');
            });
            $("#rejectConfirmation").click(function () {
                url = "/project/rejectApplicant";
                $("#box-info-text").text("reject");
                $("#box-info-title").text("Reject");
                $("#confirmation-box").modal('show');
            });
            $("#canceled").click(function () {
                $("#confirmation-box").modal('hide');
            });
            $("#confirmed").click(function () {
                $("#confirmed").attr('disabled', true);
                $.ajax({
                    url: url,
                    method: "POST",
                    dataType: "json",
                    data: {
                        user: user,
                        project_id: project_id
                    },
                    success: function () {
                        window.location.href = "/project/applicants?project_id=" + project_id + "&status=s";
                    },
                    error: function (jqXHR, textStatus, errorThrown) {
                        $("#error-msg").html(jqXHR.responseJSON);
                        $("#confirmation-box").modal('hide');
                        $("#confirmed").attr('disabled', false);
                    }
                });
            });
        });
    </script>
</head>

