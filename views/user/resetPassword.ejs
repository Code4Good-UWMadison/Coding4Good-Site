<!doctype html>
<html>
<head>
    <% include ../template/head.ejs %>
    <script>
      $(function () {
        $("#login-form").submit(() => {
          const submit = $("#submit-button");
          const msg = $("#error-msg");
          const email = $("#email").val();

          submit.attr('disabled',true);

          if (email === '') {
            msg.html('Please enter your email');
            submit.attr('disabled',false);
            return false;
          }

          $.ajax({
            url: "/resetPassword",
            method: "POST",
            dataType: "json",
            data: {
              email: email, 
            },
            success: function (result) {
              if(result.status){
               //window.location.href = "/"; change
               msg.html("Email found");
               console.log("Email found");
              }
              else {
                msg.html("Email not found, please sign up.");
                submit.attr('disabled',false);
                console.log("Email not found1111");
              }
            },
            error: function (jqXHR, textStatus, errorThrown) {
              msg.html(jqXHR.responseJSON);
              msg.html("Nope");
              console.log("Email not found22222");
              submit.attr('disabled',false);
            }
          });
          return false;
        });
      });
    </script>
</head>

<body>

<% include ../template/nav.ejs %>

<div class="container body-layout min-body-layout">
    <p class="error-msg margin-dtop" id="error-msg"></p>
    <h2 class="img-center-holder">Enter email to reset your password via email!</h2>
    <form id="login-form">
        <div class="input-group login-signup-input">
            <div class="input-group-addon">Email:</div>
            <input class="form-control" type="text" id="email" placeholder="Email">
        </div>
        <p>I don't have an account yet, <a href="/signup">sign me up!</a></p>
    </form>
    <button id="submit-button" type="submit" form="login-form" class="btn long-btn primary-button">Send me a link</button>
</div>

<% include ../template/footer.ejs %>
</body>
</html>
