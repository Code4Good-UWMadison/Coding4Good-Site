<!doctype html>
<html>

<head>
    <% include ../template/head.ejs %>
    <link rel="stylesheet" type="text/css" href="/css/slideshow.css"/>
</head>

<script>
    function follow_event(eid, uid) {
        if (uid) {
            $(".follow-button").attr('enabled', false);
            $.ajax({
                url: "/event/followEvent",
                method: "POST",
                dataType: "json",
                data: {
                    uid: uid,
                    eid: eid
                },
                success: function () {
                    window.location.href = "/event?status=s";
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $(".follow-button").attr('disabled', false);
                }
            });
        } else {
            window.location.href = "/login";
        }
    }

    function unfollow_event(eid, uid) {
        if (uid) {
            $(".unfollow-button").attr('enabled', false);
            $.ajax({
                url: "/event/unfollowEvent",
                method: "POST",
                dataType: "json",
                data: {
                    uid: uid,
                    eid: eid
                },
                success: function () {
                    window.location.href = "/event?status=s";
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $(".follow-button").attr('disabled', false);
                }
            });
        } else {
            window.location.href = "/login";
        }
    }

    function rsvp_event(eid, uid) {
        if (uid) {
            $(".rsvp-button").attr('enabled', false);
            $.ajax({
                url: "/event/rsvpEvent",
                method: "POST",
                dataType: "json",
                data: {
                    uid: uid,
                    eid: eid
                },
                success: function () {
                    window.location.href = "/event?status=s";
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $(".rsvp-button").attr('disabled', false);
                }
            });
        } else {
            window.location.href = "/login";
        }
    }

    function unrsvp_event(eid, uid) {
        if (uid) {
            $(".unrsvp-button").attr('enabled', false);
            $.ajax({
                url: "/event/unrsvpEvent",
                method: "POST",
                dataType: "json",
                data: {
                    uid: uid,
                    eid: eid
                },
                success: function () {
                    window.location.href = "/event?status=s";
                },
                error: function (jqXHR, textStatus, errorThrown) {
                    $(".unrsvp-button").attr('disabled', false);
                }
            });
        } else {
            window.location.href = "/login";
        }
    }
</script>

<body>
<% include ../template/nav.ejs %>
<div class="container body-layout">
    <% if (uid) { %>
        <a class="btn primary-button right" style="margin-left: 3px;" href="/event/followed">My Followed Events</a>
    <% } %>
    <% if (auth([all_user_role.Developer,
        all_user_role.Admin,
        all_user_role.EventExecutive], user_role)) { %>
        <a class="btn primary-button right" href="/event/create">Create Event</a>
    <% } %>

    <% if (eventsSet.length === 0) { %>
        <p class="error-msg">Sorry! Currently, there are no events available</p>
    <% } else { %>
        <div class="cover-flow">
            <div class="top-stack">
                <% for (var i = 0; i < centerIdx; i++) { %>
                    <img class="sl-img" onclick="clickUp(<%= i %>)" id="event<%= i %>" src="<%= eventsSet[i].image %>" alt="<%= eventsSet[i].description  %>" onerror="this.src='/img/icon.jpg'">
                <% } %>
            </div>
            <div class="center-stack">
                <img class="sl-img" id="event<%= centerIdx %>"
                     src="<%= eventsSet[centerIdx].image %>"
                     alt="<%= eventsSet[centerIdx].description %>"
                     onerror="this.src='/img/icon.jpg'">
            </div>
            <div class="bot-stack">
                <% for (var i = eventsSet.length - 1; i > centerIdx; i--) { %>
                    <img class="sl-img" onclick="clickDown(<%= i %>)" id="event<%= i %>" src="<%= eventsSet[i].image %>"
                         alt="<%= eventsSet[i].description %>"
                         onerror="this.src='/img/icon.jpg'">
                <% } %>
            </div>
        </div>
        <% for (var i = 0; i < eventsSet.length; i++) { %>
            <div class="info-box" id="info<%= i %>" <% if (i !== centerIdx) { %>hidden<% } %>>
                <% if (i > 0) { %>
                    <a class="change-sl" onclick="clickUp(<%= i - 1 %>)" >Previous: <%= eventsSet[i - 1].title%></a>
                <% } else { %>
                    <!-- Place holder -->
                    <div class="change-sl invisible">&nbsp;</div>
                <% } %>
                <div class="curr-info">
                    <% if (eventsSet[i].status === 1) { %>
                        <h2>[Cancelled]&nbsp;<strike><%= eventsSet[i].title %></strike></h2>
                    <% } else { %>
                        <h2><%= eventsSet[i].title %></h2>
                    <% } %>
                    <h3><%= eventsSet[i].event_time.toDateString() + " " + eventsSet[i].event_time.toLocaleTimeString() %></h3>
                    <h3><%= eventsSet[i].location %></h3>
                    <% if (eventsSet[i].link) { %>
                        <% if (uid == null) { %>
                            <h4><a href="/login">Login to see link</a></h4>
                        <% } else { %>
                            <h4><a href="<%= eventsSet[i].link %>">Event Link</a></h4>
                        <% } %>
                    <% } %>
                    <p><%= eventsSet[i].description %></p>
                        <div align="right">
                            <%
                                var canFollow = true;
                                for (var j = 0; j < followed_events.length; j++) {
                                    if (followed_events[j] === eventsSet[i].id) {
                                        canFollow = false;
                                    }
                                }
                                var canRSVP = true;
                                for (var j = 0; j < rsvp_events.length; j++) {
                                    if (rsvp_events[j] === eventsSet[i].id) {
                                        canRSVP = false;
                                    }
                                }
                            %>
                            <% if (canFollow) { %>
                                <button class="btn primary-button follow-button" onclick="follow_event(<%= eventsSet[i].id %>, <%= uid %>)">Follow Event</button>
                            <% } else { %>
                                <button class="btn primary-button unfollow-button" onclick="unfollow_event(<%= eventsSet[i].id %>, <%= uid %>)">Unfollow Event</button>
                            <% } %>
                            <% if (canRSVP) { %>
                                <button class="btn primary-button rsvp-button" onclick="rsvp_event(<%= eventsSet[i].id %>, <%= uid %>)">RSVP</button>
                            <% } else { %>
                                <button class="btn primary-button unrsvp-button" onclick="unrsvp_event(<%= eventsSet[i].id %>, <%= uid %>)">Cancel RSVP</button>
                            <% } %>
                            <% if (auth([all_user_role.Developer,
                                all_user_role.Admin,
                                all_user_role.EventExecutive], user_role)) { %>
                                <a class="btn primary-button" href="/event/edit?id=<%= eventsSet[i].id %>">Edit Event</a>
                            <% } %>
                        </div>
                </div>
                <% if (i < eventsSet.length - 1) { %>
                    <a class="change-sl"
                        onclick="clickDown(<%= i + 1 %>)">Next: <%= eventsSet[i + 1].title %></a>
                <% } %>
            </div>
        <% } %>
    <% } %>
    <script src="/js/slideshow.js"></script>
</body>

</html>